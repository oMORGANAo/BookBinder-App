{%extends 'base_security.html.twig' %}

{% block login_page %}

    <div class="login-container">
        <h2>Login</h2>
        {% if error %}
            <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label for="username">Email:</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password">
            </div>

            <p class="forgot-password-text"><a href="{{ path('app_forgot_password_request') }}" class="forgot-password-link">Forgot password?</a></p>

            <button type="submit">Log In</button>
            <p class="signup-text">If you don't have an account yet, please <a href="{{ path('app_register') }}" class="signup-link">Sign Up</a></p>
        </form>
    </div>

{% endblock %}